{
    "extends": "@elucidario/tool-tsconfig",
    "compilerOptions": {
        "baseUrl": "./",
        "resolveJsonModule": true,
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "module": "ESNext",
        "allowJs": true,
        "moduleResolution": "Bundler",
        "target": "ES2022",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "@elucidario/mdorim"
        ]
    },
    "include": [
        "./src/**/*",
    ],
}