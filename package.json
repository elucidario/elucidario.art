{
    "name": "elucidario",
    "version": "0.0.0-development",
    "private": true,
    "description": "monorepo elucidario.art",
    "license": "MIT",
    "author": "Henrique Godinho <henrique@hgod.in>",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "build": "pnpm --recursive run build",
        "build:app": "pnpm --filter '@elucidario/app-*' run build",
        "build:pkg": "pnpm --filter '@elucidario/pkg-*' run  build",
        "clean": "lerna clean",
        "commit": "cz",
        "commit:no-verify": "pnpm commit --no-verify",
        "dev": "pnpm --recursive run dev --filter '!@elucidario/tool-*'",
        "dev:app": "pnpm --filter '@elucidario/app-*' run dev",
        "dev:pkg": "pnpm --filter '@elucidario/pkg-*' run dev",
        "lint": "pnpm --recursive run lint",
        "prepare": "husky install",
        "test": "pnpm --recursive run test",
        "typecheck": "pnpm --recursive run typecheck"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pre-commit"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "devDependencies": {
        "commitizen": "^4.3.1",
        "conventional-changelog": "^6.0.0",
        "eslint": "^9.21.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.3",
        "typescript": "^5.8.2"
    },
    "packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b"
}
