{
    "name": "elucidario",
    "version": "0.0.0-development",
    "private": true,
    "description": "monorepo elucidario.art",
    "license": "MIT",
    "author": "Henrique Godinho <henrique@hgod.in>",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "build": "lerna run build --stream",
        "build:app": "lerna run build --scope '@elucidario/app-*'",
        "build:pkg": "lerna run build --scope '@elucidario/pkg-*'",
        "build:tool": "lerna run build --scope '@elucidario/tool-*'",
        "build:workspace": "lerna run build",
        "clean": "lerna clean",
        "commit": "cz",
        "commit:no-verify": "pnpm commit --no-verify",
        "deploy": "lerna run deploy",
        "dev": "lerna run dev --stream --ignore @elucidario/tool-*",
        "dev:app": "lerna run dev --scope '@elucidario/app-*'",
        "dev:pkg": "lerna run dev --scope '@elucidario/pkg-*'",
        "dev:tool": "lerna run dev --scope '@elucidario/tool-*'",
        "graph": "pnpm nx graph",
        "lint": "lerna run lint",
        "prepare": "husky install",
        "serve": "lerna run serve",
        "start": "lerna run start",
        "swizzle": "lerna run swizzle",
        "test": "lerna run test --stream",
        "typecheck": "tsc",
        "versionUp": "lerna version --no-private --conventional-commits"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pre-commit"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "dependencies": {
        "import-local": "^3.2.0",
        "nx": "^20.4.6"
    },
    "devDependencies": {
        "@elucidario/tool-eslint-config": "workspace:^",
        "commitizen": "^4.3.1",
        "conventional-changelog": "^6.0.0",
        "eslint": "^9.21.0",
        "husky": "^9.1.7",
        "lerna": "^8.2.0",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.2",
        "typescript": "^5.7.3"
    },
    "packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b"
}
