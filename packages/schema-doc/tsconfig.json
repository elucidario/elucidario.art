{
    "extends": "@elucidario/pkg-tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "paths": {
            "@elucidario/pkg-types": ["../types/dist"],
            "@elucidario/pkg-docusaurus-md": ["../docusaurus-md/dist"],
            "@elucidario/pkg-schema-doc": ["../schema-doc/dist"],
            "@elucidario/pkg-console": ["../console/dist"]
        }
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "dist"]
}
