{
    "extends": "@elucidario/tool-tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist/types",
        "paths": {
            "@elucidario/pkg-types": [
                "node_modules/@elucidario/pkg-types/dist/index.d.ts",
            ],
            "@elucidario/pkg-console": [
                "node_modules/@elucidario/pkg-console/dist/types/index.d.ts",
            ],
            "@elucidario/pkg-paths": [
                "node_modules/@elucidario/pkg-paths/dist/types/index.d.ts",
            ],
        },
        "types": [
            "./node_modules/@elucidario/pkg-console/dist/types/index.d.ts",
            "./node_modules/@elucidario/pkg-paths/dist/types/index.d.ts",
            "./node_modules/@elucidario/pkg-types/dist/index.d.ts",
        ],
    },
    "include": ["src/index.ts", "./tests"],
    "exclude": ["node_modules", "dist"],
}
