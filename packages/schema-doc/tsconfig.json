{
    "extends": "@elucidario/tool-tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "dist/types",
        "paths": {
            "@elucidario/pkg-types": [
                "node_modules/@elucidario/pkg-types/dist"
            ],
            "@elucidario/pkg-docusaurus-md": [
                "node_modules/@elucidario/pkg-docusaurus-md/dist"
            ],
            "@elucidario/pkg-console": [
                "node_modules/@elucidario/pkg-console/dist/types"
            ],
            "@elucidario/pkg-paths": [
                "node_modules/@elucidario/pkg-paths/dist/types"
            ]
        }
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "dist"]
}
