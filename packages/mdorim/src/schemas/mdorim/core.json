{
    "$schema": "http://json-schema.org/schema",
    "$id": "https://elucidario.art/mdorim/schemas/mdorim/core.json",
    "definitions": {
        "entity_id": {
            "type": "integer",
            "description": "Unique identifier for the resource."
        },
        "name": {
            "type": "string",
            "description": "The name for the resource."
        },
        "guid": {
            "type": "string",
            "description": "Global Unique Identifier for the resource."
        },
        "uri": {
            "type": "string",
            "description": "The URI for the resource."
        },
        "author": {
            "type": "integer",
            "description": "ID of the author of the resource."
        },
        "password": {
            "type": "string",
            "description": "Password for the resource."
        },
        "created": {
            "type": "string",
            "description": "The date the resource was created, in the site's timezone.",
            "format": "date-time"
        },
        "modified": {
            "type": "string",
            "description": "The date the resource was last modified, in the site's timezone.",
            "format": "date-time"
        },
        "entity_status": {
            "type": "string",
            "description": "A named status for the resource.",
            "enum": [
                "trash",
                "pending",
                "private",
                "publish",
                "future",
                "draft"
            ]
        },

        "_fields": {
            "type": "array",
            "description": "Array of named fields to return for the resource.",
            "items": {
                "type": "string"
            }
        },
        "_embed": {
            "type": "boolean",
            "description": "Whether to embed the resource data in the response."
        },

        "relationship": {
            "type": "integer",
            "description": "The id for the related resource."
        },
        "relationships": {
            "type": "array",
            "description": "The relationships for the resource.",
            "items": {
                "$ref": "#/definitions/relationship"
            }
        },
        "mixed_statement": {
            "type": "array",
            "description": "The mixed statement for the resource.",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/relationship"
                    },
                    {
                        "$ref": "<linked-art>/core.json#/definitions/Statement"
                    }
                ]
            }
        },

        "_meta": {
            "type": "object",
            "description": "WordPress information about the entity.",
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "uri": {
                    "$ref": "#/definitions/uri"
                },
                "type": {
                    "type": "string",
                    "enum": ["// listar tipos de entidades e taxonomias //"]
                },
                "slug": {
                    "type": "string",
                    "description": "Slug da entidade ou taxonomia."
                },
                "title": {
                    "type": "string",
                    "description": "TÃ­tulo da entidade ou taxonomia."
                },
                "author": {
                    "type": "string",
                    "description": "Autor da entidade ou taxonomia."
                },

                "status": {
                    "type": "string",
                    "description": "Status da entidade ou taxonomia.",
                    "enum": [
                        "publish",
                        "future",
                        "draft",
                        "pending",
                        "private",
                        "trash"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "id",
                "uri",
                "tipo",
                "slug",
                "title",
                "autor",
                "criacao",
                "modificacao",
                "status"
            ]
        }
    }
}
