                "identified_by": {
                    "$ref": "#/definitions/identified_by"
                },
                "classified_as": {
                    "$ref": "#/definitions/classified_as"
                },
                "referred_to_by": {
                    "$ref": "#/definitions/referred_to_by"
                },
                "took_place_at": {
                    "$ref": "#/definitions/took_place_at"
                },
                "timespan": {
                    "$ref": "#/definitions/timespan"
                },
                "caused_by": {
                    "$ref": "#/definitions/caused_by"
                },
                "carried_out_by": {
                    "$ref": "#/definitions/carried_out_by"
                },
                "used_specific_object": {
                    "$ref": "#/definitions/used_specific_object"
                },
                "influenced_by": {
                    "$ref": "#/definitions/influenced_by"
                },
                "technique": {
                    "$ref": "#/definitions/technique"
                },
                "part_of": {
                    "$ref": "#/definitions/EventRefOrActivityRef"
                },
                "assigned": {
                    "title": "*",
                    "description": "Attribute Assignments can assign any entity, structure or value"
                },
                "assigned_property": {
                    "title": "crm:P177_assigned_property_type",
                    "description": "The relationship from the attributed entity to the assigned entity, given as a string which resolves to a relationship in the context definition",
                    "type": "string"
                }
            },
            "required": ["type"],
            "additionalProperties": false
        },
        "Statement": {
            "title": "crm:E33_Linguistic_Object",
            "description": "An embedded, relatively short piece of textual content\nSee: [API](https://linked.art/api/1.0/shared/statement/) | [Model](https://linked.art/model/base/#statements-about-a-resource)",
