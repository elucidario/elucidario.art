{
    "$schema": "http://json-schema.org/schema",
    "$id": "https://elucidario.art/mdorim/schemas/mdorim/core.json",
    "definitions": {
        "id": {
            "type": "integer",
            "description": "Unique identifier for the resource."
        },
        "uri": {
            "type": "string",
            "description": "The URI for the resource."
        },
        "_meta": {
            "type": "object",
            "description": "WordPress information about the entity.",
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "uri": {
                    "$ref": "#/definitions/uri"
                },
                "type": {
                    "type": "string",
                    "enum": ["// listar tipos de entidades e taxonomias //"]
                },
                "slug": {
                    "type": "string",
                    "description": "Slug da entidade ou taxonomia."
                },
                "title": {
                    "type": "string",
                    "description": "Título da entidade ou taxonomia."
                },
                "author": {
                    "type": "string",
                    "description": "Autor da entidade ou taxonomia."
                },
                "creation": {
                    "type": "string",
                    "description": "Data de criação da entidade ou taxonomia.",
                    "format": "date-time"
                },
                "modification": {
                    "type": "string",
                    "description": "Data de modificação da entidade ou taxonomia.",
                    "format": "date-time"
                },
                "status": {
                    "type": "string",
                    "description": "Status da entidade ou taxonomia.",
                    "enum": [
                        "publish",
                        "future",
                        "draft",
                        "pending",
                        "private",
                        "trash"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "id",
                "uri",
                "tipo",
                "slug",
                "title",
                "autor",
                "criacao",
                "modificacao",
                "status"
            ]
        },
        "label": {
            "title": "rdfs:label",
            "description": "A human readable name or label for the entity, intended for developers",
            "type": "string",
            "examples": [
                "Georgia O'Keeffe",
                "Blue by Georgia O'Keeffe",
                "New Haven, CT"
            ]
        },
        "type": {
            "title": "rdf:type",
            "description": "The class of the entity",
            "type": "string",
            "examples": ["Person", "Place", "Type", "HumanMadeObject"]
        },
        "identified_by": {
            "title": "crm:P1_is_identified_by",
            "description": "A `Name` or `Identifier` that identifies the entity",
            "type": "array",
            "items": {
                "$ref": "#/definitions/NameOrIdentifier"
            }
        },
        "classified_as": {
            "title": "crm:P2_has_type",
            "description": "A `Type` which classifies this entity beyond the class given in the `type` property",
            "type": "array",
            "items": {
                "$ref": "#/definitions/id"
            }
        },
        "referred_to_by": {
            "title": "crm:P67i_is_referred_to_by",
            "description": "An embedded statement about this entity, or a reference to a text that refers to the entity",
            "type": "array",
            "items": {
                "$ref": "#/definitions/LingObjOrDigitalObjOrStatement"
            }
        },
        "made_of": {
            "title": "crm:P45_consists_of",
            "description": "One or more `Material` types of which this object is made",
            "type": "array",
            "items": {
                "$ref": "#/definitions/id"
            }
        },
        "content": {
            "title": "crm:P190_has_symbolic_content",
            "description": "The string representation of a `Name`, `Identifier`, `Statement` or other text",
            "type": "string"
        },
        "language": {
            "title": "crm:P72_has_language",
            "description": "A reference to one or more `Language` entities in which the `content` of this text is written",
            "type": "array",
            "items": {
                "$ref": "#/definitions/LanguageRef"
            }
        },
        "format": {
            "title": "dc:format",
            "description": "The media type of the content of the embedded text, e.g. text/plain",
            "type": "string",
            "examples": ["text/html", "image/jpeg"]
        },
        "took_place_at": {
            "title": "crm:P7_took_place_at",
            "description": "A `Place` at which this event occurred",
            "type": "array",
            "items": {
                "$ref": "#/definitions/PlaceRef"
            }
        },
        "timespan": {
            "title": "crm:P4_has_time-span",
            "description": "A `TimeSpan` which describes the date-time range during which this event occurred",
            "$ref": "#/definitions/TimeSpan"
        },
        "value": {
            "title": "crm:P90_has_value",
            "description": "The numeric value of a `Dimension` or `MonetaryAmount`",
            "type": "number",
            "examples": [10, 0.5, 42.75]
        },
        "upper_value_limit": {
            "title": "crm:P90a_has_upper_value_limit",
            "description": "The highest possible value for the `Dimension` or `MonetaryAmount`",
            "type": "number",
            "examples": [100]
        },
        "lower_value_limit": {
            "title": "crm:P90a_has_lower_value_limit",
            "description": "The lowest possible value for the `Dimension` or `MonetaryAmount`",
            "type": "number",
            "examples": [5]
        },
        "caused_by": {
            "title": "sci:O13i_is_triggered_by",
            "description": "Another event which caused this event to occur",
            "type": "array",
            "items": {
                "$ref": "#/definitions/EventRefOrActivityRef"
            }
        },
        "carried_out_by": {
            "title": "crm:P14_carried_out_by",
            "description": "A reference to a Person or Group which carried out this activity",
            "type": "array",
            "items": {
                "$ref": "#/definitions/PersonRefOrGroupRef"
            }
        },
        "technique": {
            "title": "crm:P32_used_general_technique",
            "description": "A general technique that was employed to carry out this activity",
            "type": "array",
            "items": {
                "$ref": "#/definitions/Concept"
            }
        },
        "used_specific_object": {
            "title": "crm:P16_used_specific_object",
            "description": "An object or set of things which was used to carry out this activity",
            "type": "array",
            "items": {
                "$ref": "#/definitions/HumanMadeObjectRefOrSetRef"
            }
        },
        "influenced_by": {
            "title": "crm:P15_was_influenced_by",
            "description": "A Person, Group or Object that influenced the activity in some way",
            "type": "array",
            "items": {
                "$ref": "#/definitions/HumanMadeObjectRefOrPersonRefOrGroupRef"
            }
        },
        "Concept": {
            "title": "crm:E55_Type",
            "description": "A concept or 'Type' in the taxonomic sense\nSee: [API](https://linked.art/api/1.0/shared/type/) | [Model](https://linked.art/model/base/#types-and-classifications)",
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "_label": {
                    "$ref": "#/definitions/label"
                },
                "type": {
                    "allOf": [
                        {
                            "title": "General",
                            "$ref": "#/definitions/type"
                        },
                        {
                            "title": "Specific",
                            "type": "string",
                            "const": "Type"
                        }
                    ]
                },
                "identified_by": {
                    "$ref": "#/definitions/identified_by"
                },
                "classified_as": {
                    "$ref": "#/definitions/classified_as"
                }
            },
            "required": ["id", "type"],
            "additionalProperties": false
        },
        "Dimension": {
            "title": "crm:E54_Dimension",
            "description": "A measurable aspect of an entity, with a numeric value, a unit for that value, and a type relative to the entity\nSee: [API](https://linked.art/api/1.0/shared/dimension/) | [Model](https://linked.art/model/object/physical/#dimensions)",
            "type": "object",
            "properties": {
                "_label": {
                    "$ref": "#/definitions/label"
                },
                "type": {
                    "allOf": [
                        {
                            "title": "General",
                            "$ref": "#/definitions/type"
                        },
                        {
                            "title": "Specific",
                            "type": "string",
                            "const": "Dimension"
                        }
                    ]
                },
                "identified_by": {
                    "$ref": "#/definitions/identified_by"
                },
                "classified_as": {
                    "$ref": "#/definitions/classified_as"
                },
                "value": {
                    "$ref": "#/definitions/value"
                },
                "lower_value_limit": {
                    "$ref": "#/definitions/lower_value_limit"
                },
                "upper_value_limit": {
                    "$ref": "#/definitions/upper_value_limit"
                },
                "unit": {
                    "title": "crm:P91_has_unit",
                    "description": "Reference to the MeasurementUnit for this dimension",
                    "$ref": "#/definitions/UnitRef"
                },
                "assigned_by": {
                    "title": "crm:P141i_was_assigned_by",
                    "description": "The Measurement(s) that led to the assigning of this dimension",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/AttributeAssignment"
                    }
                }
            },
            "required": ["type", "value", "unit"],
            "additionalProperties": false
        },
        "TimeSpan": {
            "title": "crm:E52_Time-Span",
            "description": "A data structure for recording a span of time\nSee: [API](https://linked.art/api/1.0/shared/timespan/) | [Model](https://linked.art/model/base/#time-span-details)",
            "type": "object",
            "properties": {
                "_label": {
                    "$ref": "#/definitions/label"
                },
                "type": {
                    "allOf": [
                        {
                            "title": "General",
                            "$ref": "#/definitions/type"
                        },
                        {
                            "title": "Specific",
                            "type": "string",
                            "const": "TimeSpan"
                        }
                    ]
                },
                "identified_by": {
                    "$ref": "#/definitions/identified_by"
                },
                "classified_as": {
                    "$ref": "#/definitions/classified_as"
                },
                "begin_of_the_begin": {
                    "title": "crm:P82a_begin_of_the_begin",
                    "description": "The earliest possible date-time at which the timespan could have started",
                    "type": "string",
                    "format": "date-time"
                },
                "end_of_the_begin": {
                    "title": "crm:P81a_end_of_the_begin",
                    "description": "The latest possible date-time at which the timespan could have started",
                    "type": "string",
                    "format": "date-time"
                },
                "begin_of_the_end": {
                    "title": "crm:P81b_begin_of_the_end",
                    "description": "The earliest possible date-time at which the timespan could have ended",
                    "type": "string",
                    "format": "date-time"
                },
                "end_of_the_end": {
                    "title": "crm:P82b_end_of_the_end",
                    "description": "The latest possible date-time at which the timespan could have ended",
                    "type": "string",
                    "format": "date-time"
                },
                "duration": {
                    "title": "crm:P191_had_duration",
                    "description": "A `Dimension` that describes the duration of the timespan within any given date-times",
                    "$ref": "#/definitions/Dimension"
                }
            },
            "required": ["type"],
            "additionalProperties": false
        },
        "NameOrIdentifier": {
            "description": "A Name or an Identifier",
            "anyOf": [
                {
                    "$ref": "#/definitions/Name"
                },
                {
                    "$ref": "#/definitions/Identifier"
                }
            ]
        },
        "Name": {
            "title": "crm:E33_E41_Linguistic_Appellation",
            "description": "A name of an entity\nSee: [API](https://linked.art/api/1.0/shared/name/) | [Model](https://linked.art/model/base/#names)",
            "type": "object",
            "properties": {
                "_label": {
                    "$ref": "#/definitions/label"
                },
                "type": {
                    "allOf": [
                        {
                            "title": "General",
                            "$ref": "#/definitions/type"
                        },
                        {
                            "title": "Specific",
                            "type": "string",
                            "const": "Name"
                        }
                    ]
                },
                "identified_by": {
                    "$ref": "#/definitions/identified_by"
                },
                "classified_as": {
                    "$ref": "#/definitions/classified_as"
                },
                "content": {
                    "$ref": "#/definitions/content"
                },
                "language": {
                    "$ref": "#/definitions/language"
                },
                "part": {
                    "description": "A list of one or more `Name` structures, which are parts of this `Name`",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Name"
                    }
                }
            },
            "required": ["type", "content"],
            "additionalProperties": false,
            "examples": [
                {
                    "type": "Name",
                    "content": "Georgia O'Keeffe"
                },
                {
                    "type": "Name",
                    "content": "Blue",
                    "classified_as": [
                        {
                            "id": "http://vocab.getty.edu/aat/300404670",
                            "type": "Type",
                            "_label": "Primary Name"
                        }
                    ],
                    "language": [
                        {
                            "id": "http://vocab.getty.edu/aat/300388277",
                            "type": "Language",
                            "_label": "English"
                        }
                    ]
                }
            ]
        },
        "Identifier": {
            "title": "crm:E42_Identifier",
            "description": "An identifier for an entity\nSee: [API](https://linked.art/api/1.0/shared/identifier/) | [Model](https://linked.art/model/base/#identifiers)",
            "type": "object",
            "properties": {
