{
    "$schema": "http://json-schema.org/schema",
    "$id": "https://elucidario.art/mdorim/schemas/core.json",
    "definitions": {
        "@context": {
            "type": "string",
            "title": "context",
            "description": "The URI of the context for the resource."
        },
        "id": {
            "type": "integer",
            "title": "id",
            "description": "Unique identifier for the resource."
        },
        "uri": {
            "type": "string",
            "title": "uri",
            "description": "The URI for the resource."
        },
        "_meta": {
            "type": "object",
            "title": "meta",
            "description": "WordPress information about the entity.",
            "properties": {
                "id": {
                    "$ref": "#/definitions/id"
                },
                "uri": {
                    "$ref": "#/definitions/uri"
                },
                "type": {
                    "type": "string",
                    "enum": ["// listar tipos de entidades e taxonomias //"]
                },
                "slug": {
                    "type": "string",
                    "description": "Slug da entidade ou taxonomia."
                },
                "title": {
                    "type": "string",
                    "description": "Título da entidade ou taxonomia."
                },
                "author": {
                    "type": "string",
                    "description": "Autor da entidade ou taxonomia."
                },
                "creation": {
                    "type": "string",
                    "description": "Data de criação da entidade ou taxonomia.",
                    "format": "date-time"
                },
                "modification": {
                    "type": "string",
                    "description": "Data de modificação da entidade ou taxonomia.",
                    "format": "date-time"
                },
                "status": {
                    "type": "string",
                    "description": "Status da entidade ou taxonomia.",
                    "enum": [
                        "publish",
                        "future",
                        "draft",
                        "pending",
                        "private",
                        "trash"
                    ]
                }
            },
            "additionalProperties": false,
            "required": [
                "id",
                "uri",
                "tipo",
                "slug",
                "title",
                "autor",
                "criacao",
                "modificacao",
                "status"
            ]
        }
    }
}
