{
    "name": "@elucidario/pkg-mdorim",
    "version": "0.2.1",
    "description": "Modelo de Dados para Organização e Representação da Informação Museológica (Mdorim) utilizado pelo Elucidário.art.",
    "homepage": "https://elucidario.art/mdorim",
    "license": "MIT",
    "author": {
        "name": "Henrique Godinho",
        "email": "ola@hgod.in"
    },
    "type": "module",
    "exports": {
        ".": {
            "types": "./lib/types/src/lib/index.d.ts",
            "import": "./lib/mjs/index.min.mjs",
            "require": "./lib/cjs/index.min.cjs"
        }
    },
    "main": "./lib/mjs/index.min.mjs",
    "files": [
        "dist",
        "mapping",
        "static",
        "docs",
        "translations"
    ],
    "scripts": {
        "build": "pnpm clean:lib && pnpm build:types && pnpm build:script -c -s -e -t -d -l && pnpm test",
        "build:rollup": "rollup -c",
        "build:script": "node src/build/build.js",
        "build:types": "tsc --emitDeclarationOnly --declarationDir \"lib/types\"",
        "clean:docs": "rm -rf docs/*",
        "clean:lib": "rm -rf lib/*",
        "clean:static": "rm -rf static/*",
        "dev": "pnpm build:script -c -s -e -t -l -w --test",
        "jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
        "test": "pnpm .bin/test.sh",
        "watch:rollup": "rollup -c -w"
    },
    "dependencies": {
        "@babel/plugin-syntax-import-attributes": "^7.22.5",
        "@elucidario/pkg-paths": "workspace:^",
        "ajv": "6"
    },
    "devDependencies": {
        "@babel/plugin-transform-json-strings": "^7.22.5",
        "@babel/preset-env": "^7.22.7",
        "@elucidario/pkg-console": "workspace:^",
        "@elucidario/pkg-docusaurus-md": "workspace:^",
        "@elucidario/pkg-pub-gen": "workspace:^",
        "@elucidario/pkg-rollup": "workspace:^",
        "@elucidario/pkg-schema-doc": "workspace:^",
        "@elucidario/pkg-tsconfig": "workspace:^",
        "@elucidario/pkg-types": "workspace:^",
        "@types/node": "^20.9.0",
        "child_process": "^1.0.2",
        "commander": "^10.0.1",
        "jest": "^29.5.0",
        "jest-json-schema": "^6.1.0",
        "json-schema-to-typescript": "^13.0.1",
        "lodash-es": "^4.17.21",
        "rollup": "^4.2.0",
        "tslib": "^2.5.0",
        "typescript": "^5.2.2"
    }
}
