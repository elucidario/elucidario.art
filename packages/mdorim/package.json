{
    "name": "@elucidario/pkg-mdorim",
    "version": "0.2.0",
    "description": "Modelo de Dados para Organização e Representação da Informação Museológica, utilizado pelo Elucidário.art.",
    "homepage": "https://elucidario.art/mdorim",
    "license": "MIT",
    "author": {
        "name": "Henrique Godinho",
        "email": "ola@hgod.in"
    },
    "type": "module",
    "exports": {
        ".": {
            "import": "./lib/mjs/index.mjs",
            "require": "./lib/cjs/index.cjs"
        }
    },
    "main": "lib//mjs/index.mjs",
    "types": "lib/types.d.ts",
    "files": [
        "dist",
        "mapping",
        "static",
        "docs",
        "translations"
    ],
    "scripts": {
        "build": "pnpm buildScript -c -s -e -t -m -d && pnpm test",
        "buildScript": "node src/build/build.js",
        "clean:docs": "rm -rf docs/*",
        "clean:static": "rm -rf static/*",
        "dev": "pnpm buildScript -c -s -e -t -m -w --test",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose"
    },
    "dependencies": {
        "ajv": "6",
        "json-cycle": "^1.5.0"
    },
    "devDependencies": {
        "@babel/plugin-transform-json-strings": "^7.22.5",
        "@babel/preset-env": "^7.22.7",
        "@elucidario/pkg-console": "workspace:^",
        "@elucidario/pkg-docusaurus-md": "workspace:^",
        "@elucidario/pkg-paths": "workspace:^",
        "@elucidario/pkg-pub-gen": "workspace:^",
        "@elucidario/pkg-schema-doc": "workspace:^",
        "child_process": "^1.0.2",
        "commander": "^10.0.1",
        "jest": "^29.5.0",
        "jest-json-schema": "^6.1.0",
        "json-schema-to-typescript": "^13.0.1",
        "lodash-es": "^4.17.21"
    }
}
