{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "rootDir": "./src",
        "skipLibCheck": true,
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
}
