{
    "extends": "@elucidario/tool-tsconfig",
    "compilerOptions": {
        "baseUrl": "./",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "emitDeclarationOnly": true,
        "declarationDir": "./dist/types"
    },
    "include": [
        "./src/index.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "./src/**/*.test.ts",
        "./src/**/*.spec.ts",
    ]
}
