{
    "extends": "@elucidario/tool-tsconfig",
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "target": "ES2020",
        "outDir": "lib",
        "resolveJsonModule": true,
        "moduleResolution": "bundler",

        "types": ["@elucidario/pkg-types", "@elucidario/pkg-paths"],

        "paths": {
            "@elucidario/pkg-types": [
                "./node_modules/@elucidario/pkg-types/dist/index.d.ts"
            ],
            "@elucidario/pkg-paths": [
                "./node_modules/@elucidario/pkg-paths/dist/types/index.d.ts"
            ]
        }
    },
    "include": ["src/lib/**/*.ts"]
}
