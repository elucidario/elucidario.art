{
    "extends": "@elucidario/tool-tsconfig",
    "compilerOptions": {
        "baseUrl": "./",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
        },
        "emitDeclarationOnly": true,
        "declarationDir": "./types"
    },
    "include": [
        "./src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}