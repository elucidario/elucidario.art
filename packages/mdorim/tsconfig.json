{
    "extends": "@elucidario/pkg-tsconfig",
    "compilerOptions": {
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declarationMap": true,
        "allowJs": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src/index.ts"],
    "paths": {
        "@elucidario/types": ["../types/src"],
        "@elucidario/pkg-docusaurus-md": ["../docusaurus-md/dist"],
        "@elucidario/pkg-schema-doc": ["../schema-doc/dist"],
        "@elucidario/pkg-pub-gen": ["../pub-gen/dist"]
    }
}
