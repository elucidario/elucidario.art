{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "$id": "https://elucidario.art/pub-gen/schema/table-schema.json",
    "title": "Tabela",
    "description": "Table schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "https://specs.frictionlessdata.io/schemas/table-schema.json"
        }
    ],
    "properties": {
        "title": {
            "title": "Title",
            "description": "Table title",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "Table description",
            "type": "string"
        },
        "note": {
            "title": "Note",
            "description": "Table footnote",
            "type": "object",
            "properties": {
                "label": {
                    "type": "string",
                    "title": "Footnote label"
                },
                "content": {
                    "type": "string",
                    "title": "Footnote content"
                }
            },
            "required": ["content"],
            "additionalProperties": false
        },
        "data": {
            "title": "Data",
            "description": "Table data",
            "oneOf": [
                {
                    "title": "Rows",
                    "description": "Table rows",
                    "type": "array",
                    "items": {
                        "title": "Row",
                        "type": "array"
                    }
                },
                {
                    "title": "Path",
                    "description": "Path to data file",
                    "type": "string"
                }
            ]
        }
    },
    "required": ["fields", "title", "data"]
}
