{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://elucidario.art/pub-gen/schema/pub-gen-schema.json",
    "version": "1.0.0",
    "title": "pub-gen config file",
    "description": "Configuration file for pub-gen",
    "type": "object",
    "properties": {
        "version": {
            "description": "Version of the config file",
            "type": "string"
        },
        "name": {
            "description": "Name of the publication",
            "type": "string"
        },
        "type": {
            "description": "Type of the publication",
            "type": "string",
            "enum": [
                "book",
                "article",
                "chapter",
                "conference",
                "dissertation",
                "thesis",
                "manual",
                "misc"
            ]
        },
        "year": {
            "description": "Year of publication",
            "type": "string"
        },
        "authors": {
            "description": "List of authors",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Name of the author",
                        "type": "string"
                    },
                    "affiliation": {
                        "description": "Affiliation of the author",
                        "type": "string"
                    },
                    "email": {
                        "description": "Email of the author",
                        "type": "string"
                    },
                    "description": {
                        "description": "Description of the author",
                        "type": "string"
                    }
                },
                "required": ["name", "affiliation"]
            }
        },
        "creationDate": {
            "description": "Creation date of the publication. Automatically set to the current date.",
            "type": "string"
        },
        "folder": {
            "description": "Folder where the publications will be generated",
            "type": "object",
            "properties": {
                "url": {
                    "description": "URL of the folder",
                    "type": "string"
                },
                "id": {
                    "description": "ID of the folder",
                    "type": "string"
                }
            }
        },
        "documents": {
            "description": "List of generated documents for pub-gen",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "ID of the document",
                        "type": "string"
                    },
                    "url": {
                        "description": "URL of the document",
                        "type": "string"
                    },
                    "type": {
                        "description": "Type of the document",
                        "type": "string",
                        "enum": ["doc", "sheet", "slide"]
                    },
                    "title": {
                        "description": "Title of the document",
                        "type": "string"
                    },
                    "preset": {
                        "description": "Preset of the document",
                        "type": "string",
                        "enum": ["abnt", "apa"]
                    },
                    "language": {
                        "description": "Language of the document. Use the ISO 639-1 code.",
                        "type": "string"
                    },
                    "keywords": {
                        "description": "Keywords of the document",
                        "type": "string"
                    },
                    "createdTime": {
                        "description": "Creation date of the document. ",
                        "type": "string"
                    },
                    "updatedTime": {
                        "description": "Last update date of the document. ",
                        "type": "string"
                    }
                }
            }
        }
    }
}
