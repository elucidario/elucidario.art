{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://elucidario.art/pub-gen/schema/pub-gen-schema.json",
    "version": "1.0.0",
    "$ref": "https://specs.frictionlessdata.io/schemas/data-package.json",
    "title": "PubGen",
    "description": "Arquivo de configuração para o pub-gen",
    "type": "object",
    "required": ["version", "type", "year"],
    "properties": {
        "version": {
            "title": "Version",
            "description": "Versão do arquivo de configuração",
            "type": "string"
        },
        "type": {
            "title": "Type",
            "description": "Type of the publication",
            "type": "string",
            "enum": [
                "book",
                "article",
                "chapter",
                "conference",
                "dissertation",
                "thesis",
                "manual",
                "misc"
            ]
        },
        "year": {
            "title": "Year",
            "description": "Ano da publicação",
            "type": "string"
        },
        "folder": {
            "title": "Folder",
            "description": "Pasta do drive onde os documentos serão salvos",
            "type": "object",
            "properties": {
                "url": {
                    "description": "URL da pasta",
                    "type": "string"
                },
                "id": {
                    "description": "ID da pasta",
                    "type": "string"
                }
            }
        },
        "documents": {
            "title": "Documents",
            "description": "Lista de documentos gerados pelo pub-gen",
            "type": "array",
            "items": {
                "title": "Document",
                "description": "Documento gerado pelo pub-gen",
                "type": "object",
                "properties": {
                    "id": {
                        "description": "ID do documento",
                        "type": "string"
                    },
                    "url": {
                        "description": "URL do documento",
                        "type": "string"
                    },
                    "type": {
                        "description": "Tipo do documento",
                        "type": "string",
                        "enum": ["doc", "sheet", "slide"]
                    },
                    "title": {
                        "description": "Título do documento",
                        "type": "string"
                    },
                    "preset": {
                        "description": "Preset do documento",
                        "type": "string",
                        "enum": ["abnt", "apa"]
                    },
                    "language": {
                        "description": "Idioma do documento. Use código ISO 639-1.",
                        "type": "string"
                    },
                    "keywords": {
                        "description": "Palavras-chave do documento",
                        "type": "string"
                    },
                    "createdTime": {
                        "description": "Data de criação do documento",
                        "type": "string"
                    },
                    "updatedTime": {
                        "description": "Data de atualização do documento",
                        "type": "string"
                    }
                }
            }
        }
    }
}
