{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "https://elucidario.art/pub-gen/schema/pub-gen-schema.json",
    "version": "1.0.0",
    "allOf": [
        {
            "$ref": "https://specs.frictionlessdata.io/schemas/data-package.json"
        }
    ],
    "title": "PubGen",
    "description": "Configuration file for pub-gen",
    "type": "object",
    "required": ["name", "version", "type", "year"],
    "properties": {
        "name": {
            "description": "An identifier for the publication. It will be automatically generated."
        },
        "version": {
            "title": "Version",
            "description": "Version of the configuration file.",
            "type": "string"
        },
        "type": {
            "title": "Type",
            "description": "Type of the publication.",
            "type": "string",
            "enum": [
                "book",
                "article",
                "chapter",
                "conference",
                "dissertation",
                "thesis",
                "manual",
                "misc"
            ]
        },
        "year": {
            "title": "Year",
            "description": "Publication year.",
            "type": "string"
        },
        "languages": {
            "title": "Languages",
            "description": "The languages of the publication. Use ISO 639-1 code.",
            "type": "array",
            "items": {
                "title": "Language",
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true,
            "default": ["pt-BR", "en"]
        },
        "drive": {
            "title": "Google Drive folder",
            "description": "Folder where the files will be synced.",
            "type": "object",
            "properties": {
                "url": {
                    "description": "URL da pasta",
                    "type": "string"
                },
                "id": {
                    "description": "ID da pasta",
                    "type": "string"
                }
            }
        }
    }
}
