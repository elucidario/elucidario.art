{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "$id": "https://elucidario.art/pub-gen/schema/pub-gen-schema.json",
    "version": "1.0.0",
    "allOf": [
        {
            "$ref": "https://specs.frictionlessdata.io/schemas/data-package.json"
        }
    ],
    "title": "PubGen",
    "description": "Configuration file for pub-gen",
    "type": "object",
    "required": ["name", "version", "type", "year"],
    "properties": {
        "version": {
            "title": "Version",
            "description": "Version of the configuration file.",
            "type": "string"
        },
        "private": {
            "title": "Private",
            "description": "If true, the publication will not be published.",
            "type": "boolean"
        },
        "type": {
            "title": "Type",
            "description": "Type of the publication.",
            "type": "string",
            "enum": [
                "book",
                "article",
                "chapter",
                "conference",
                "dissertation",
                "thesis",
                "manual",
                "misc"
            ]
        },
        "year": {
            "title": "Year",
            "description": "Publication year.",
            "type": "string"
        },
        "documents": {
            "type": "array",
            "title": "Documents",
            "description": "List of documents.",
            "items": {
                "title": "Document",
                "type": "object",
                "properties": {
                    "title": {
                        "title": "Title",
                        "description": "Title of the document.",
                        "type": "string"
                    },
                    "style": {
                        "title": "Style",
                        "description": "Use CSL style.",
                        "type": "object",
                        "properties": {
                            "name": {
                                "title": "Name",
                                "description": "Name of the style.",
                                "type": "string"
                            },
                            "url": {
                                "title": "URL",
                                "description": "URL of the style.",
                                "type": "string"
                            }
                        },
                        "required": ["name", "url"]
                    },
                    "language": {
                        "title": "Language",
                        "description": "The language of the document. Use RFC 5646.",
                        "type": "string"
                    }
                },
                "required": ["title", "style", "language"]
            }
        },
        "drive": {
            "title": "Google Drive folder",
            "description": "Folder where the files will be synced.",
            "type": "object",
            "properties": {
                "url": {
                    "description": "URL da pasta",
                    "type": "string"
                },
                "id": {
                    "description": "ID da pasta",
                    "type": "string"
                }
            }
        }
    }
}
