{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "https://elucidario.art/pub-gen/schema/pub-gen-schema.json",
    "version": "1.0.0",
    "allOf": [
        {
            "$ref": "https://specs.frictionlessdata.io/schemas/data-package.json"
        }
    ],
    "title": "PubGen",
    "description": "Configuration file for pub-gen",
    "type": "object",
    "required": ["version", "type", "year"],
    "properties": {
        "version": {
            "title": "Version",
            "description": "Version of the configuration file.",
            "type": "string"
        },
        "type": {
            "title": "Type",
            "description": "Type of the publication.",
            "type": "string",
            "enum": [
                "book",
                "article",
                "chapter",
                "conference",
                "dissertation",
                "thesis",
                "manual",
                "misc"
            ]
        },
        "year": {
            "title": "Year",
            "description": "Publication year.",
            "type": "string"
        },
        "folder": {
            "title": "Folder",
            "description": "Folder where the documents will be generated.",
            "type": "object",
            "properties": {
                "url": {
                    "description": "URL da pasta",
                    "type": "string"
                },
                "id": {
                    "description": "ID da pasta",
                    "type": "string"
                }
            }
        },
        "language": {
            "title": "Languages",
            "description": "The languages of the publication. Use ISO 639-1 code.",
            "type": "array",
            "items": {
                "title": "Language",
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true,
            "default": ["pt-BR", "en"]
        },
        "documents": {
            "title": "Documents",
            "description": "Documents generated by pub-gen.",
            "type": "array",
            "items": {
                "title": "Document",
                "description": "Documento gerado pelo pub-gen",
                "type": "object",
                "properties": {
                    "id": {
                        "description": "ID do documento",
                        "type": "string"
                    },
                    "url": {
                        "description": "URL do documento",
                        "type": "string"
                    },
                    "type": {
                        "description": "Tipo do documento",
                        "type": "string",
                        "enum": ["doc", "sheet", "slide"]
                    },
                    "title": {
                        "description": "Título do documento",
                        "type": "string"
                    },
                    "preset": {
                        "description": "Preset do documento",
                        "type": "string",
                        "enum": ["abnt", "apa"]
                    },
                    "keywords": {
                        "description": "Palavras-chave do documento",
                        "type": "string"
                    },
                    "createdTime": {
                        "description": "Data de criação do documento",
                        "type": "string"
                    },
                    "updatedTime": {
                        "description": "Data de atualização do documento",
                        "type": "string"
                    }
                }
            }
        }
    }
}
