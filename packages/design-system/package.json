{
    "name": "@elucidario/design-system",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/lib/design-system.es.js",
            "require": "./dist/lib/design-system.cjs.js"
        },
        "./styles.css": "./dist/lib/design-system.css",
        "./theme.css": "./public/theme.css"
    },
    "main": "./dist/lib/design-system.cjs.js",
    "module": "./dist/lib/design-system.es.js",
    "files": [
        "./dist/lib/design-system.css"
    ],
    "scripts": {
        "build": "pnpm build:lib && pnpm build:types",
        "build:lib": "vite build --outDir ./dist/lib",
        "build:types": "tsc -p ./tsconfig.build.json",
        "dev": "vite dev",
        "dev:build": "concurrently \"pnpm build --watch\" \"pnpm build:types --watch\"",
        "lint": "eslint 'src/**' --fix",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@icons-pack/react-simple-icons": "^12.7.0",
        "@radix-ui/react-slot": "^1.1.2",
        "@tailwindcss/vite": "^4.1.4",
        "lucide-react": "^0.479.0",
        "react-hook-form": "^7.54.2",
        "react-router": "^7.5.3",
        "tailwindcss": "^4.1.4",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.25.1",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitejs/plugin-react": "^4.4.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.1.2",
        "eslint": "^9.25.1",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.0.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "tailwind-merge": "^3.0.2",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.31.0",
        "vite": "^6.3.3",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "peerDependencies": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "zustand": "^5.0.3"
    }
}
