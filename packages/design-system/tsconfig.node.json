{
    "compilerOptions": {
        "baseUrl": ".",
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@/*": ["./lib/*"],
            "@/assets/*": ["./assets/*"]
        }
    },
    "include": ["vite.config.ts", "package.json"]
}
