{
    "extends": "@elucidario/pkg-tsconfig",
    "compilerOptions": {
        "resolveJsonModule": true,
        "outDir": "dist",
        "jsx": "react",
        "baseUrl": ".",
        "moduleResolution": "node",
        "module": "ES2015",
        "declaration": true,
        "declarationMap": true,
        "preserveSymlinks": true,
        "declarationDir": "./dist/types",
        "paths": {
            "@/*": ["./src/*"],
            "@elucidario/pkg-types": [
                "./node_modules/@elucidario/pkg-types/dist/index.d.ts"
            ]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json"]
}
