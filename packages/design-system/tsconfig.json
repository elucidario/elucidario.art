{
    "extends": "@elucidario/tool-tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "importHelpers": true,
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        /* Design system */
        "paths": {
            "@/*": [
                "./lib/*"
            ],
            "@/assets/*": [
                "./assets/*"
            ]
        },
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "declarationDir": "dist/types"
    },
    "include": [
        "./lib/**/*",
    ]
}