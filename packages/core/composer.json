{
    "authors": [
        {
            "email": "henrique@hgod.in",
            "name": "hgodinho"
        }
    ],
    "autoload": {
        "psr-4": {
            "LCDR\\": "./src/php",
            "LCDR\\Tests\\": "./tests/Pest"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/berlindb/core"
        },
        {
            "type": "path",
            "url": "../mdorim"
        }
    ],
    "name": "elucidario/pkg-core",
    "require": {
        "opis/json-schema": "^2.3",
        "berlindb/core": "@dev",
        "elucidario/pkg-mdorim": "@dev"
    },
    "require-dev": {
        "automattic/vipwpcs": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "0.7.2",
        "dingo-d/wp-pest-integration-test-setup": "^1.6",
        "php-stubs/wordpress-stubs": "^6.2",
        "phpcompatibility/phpcompatibility-wp": "*",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-cli/wp-cli-bundle": "*",
        "wp-coding-standards/wpcs": "2.3.0",
        "theseer/phpdox": "*",
        "saggre/phpdocumentor-markdown": "^0.1.3",
        "phpunit/php-code-coverage": "^9.2"
    },
    "scripts": {
        "phpcbf": "phpcbf --standard=phpcs.xml --extensions=php --ignore=vendor/ ./src/php",
        "phpcs": "phpcs --standard=phpcs.xml --extensions=php --ignore=vendor/ ./src/php",
        "test": "vendor/bin/pest --coverage",
        "test:integration": "vendor/bin/pest --group=integration",
        "test:unit": "vendor/bin/pest --group=unit",
        "doc": "vendor/bin/phpdox"
    }
}
