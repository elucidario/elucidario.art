{
    "name": "elucidario/pkg-core",
    "authors": [
        {
            "name": "hgodinho",
            "email": "henrique@hgod.in"
        }
    ],
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "0.7.2",
        "phpcompatibility/phpcompatibility-wp": "*",
        "wp-coding-standards/wpcs": "2.3.0",
        "automattic/vipwpcs": "*",
        "wp-cli/wp-cli-bundle": "*",
        "squizlabs/php_codesniffer": "^3.7",
        "php-stubs/wordpress-stubs": "^6.2",
        "dingo-d/wp-pest-integration-test-setup": "^1.6"
    },
    "scripts": {
        "phpcs": [
            "phpcs --standard=phpcs.xml.dist --extensions=php --ignore=vendor/ ."
        ],
        "phpcbf": [
            "phpcbf --standard=phpcs.xml.dist --extensions=php --ignore=vendor/ ."
        ],
        "phpunit": [
            "phpunit tests"
        ]
    },
    "autoload": {
        "psr-4": {
            "LCDR\\": "./src/php",
            "LCDR\\Tests\\": "./tests/php"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true,
            "pestphp/pest-plugin": true
        }
    }
}
