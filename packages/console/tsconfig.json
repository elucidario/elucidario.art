{
    "extends": "@elucidario/tool-tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ES2020",
        "moduleResolution": "Bundler",
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
        "paths": {
            "@elucidario/types-console": [
                "node_modules/@elucidario/types-console/dist/index.d.ts"
            ]
        },
        "types": ["@elucidario/types-console"]
    },
    "include": ["src/index.ts"]
}
