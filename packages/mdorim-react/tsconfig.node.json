{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,

        "types": ["@elucidario/pkg-types", "@elucidario/pkg-mdorim"],
        "paths": {
            "@elucidario/pkg-mdorim": [
                "./node_modules/@elucidario/pkg-mdorim/lib/types/index.d.ts"
            ],
            "@elucidario/pkg-types": [
                "./node_modules/@elucidario/pkg-mdorim/dist/index.d.ts"
            ]
        }
    },
    "include": ["vite.config.ts", "package.json"]
}
