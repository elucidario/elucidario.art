{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Agente.",
    "description": "Schema para descrevrer as informações de um agente de uma referência bibliográfica.",
    "definitions": {
        "autor": {
            "type": "object",
            "properties": {
                "nome": {
                    "description": "Nome do agente.",
                    "type": "string"
                },
                "sobrenome": {
                    "description": "Sobrenome do agente.",
                    "type": "string"
                },
                "tipo": {
                    "description": "Tipo do agente.",
                    "type": "string",
                    "enum": [
                        "autoria",
                        "edição",
                        "organização",
                        "tradução",
                        "ilustração",
                        "colaboração",
                        "orientação"
                    ]
                }
            },
            "required": ["nome", "sobrenome", "tipo"],
            "additionalProperties": false,
            "examples": [
                {
                    "nome": "João",
                    "sobrenome": "Silva",
                    "tipo": "autoria"
                }
            ]
        },
        "autores": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/autor"
            },
            "minItems": 1,
            "uniqueItems": true
        }
    }
}
